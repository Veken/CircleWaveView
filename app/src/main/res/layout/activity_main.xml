<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/shape_main_page">

        <com.fatchao.circleindicatorview.CircleIndicatorView
            android:id="@+id/circle_index_view"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            app:grayColor="@color/gray"
            app:largeSize="13sp"
            app:lineSpace="2dp"
            app:smallSize="10sp"
            app:whiteColor="@color/white" />

        <com.fatchao.circleindicatorview.WaveView xmlns:WaveView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/wave_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            WaveView:amplitude="36"
            WaveView:backgroundColor="#9cd1f9"
            WaveView:firstWaveColor="#ABDBFF"
            WaveView:secondWaveColor="#bfe5fd"
            WaveView:speed="2"
            WaveView:waterProgress="70"
            WaveView:waveSize="156dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126.5dp"
            android:text="年化收益(%)"
            android:textColor="#FF6726"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/mcb_year_earn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="136.5dp"
            android:text="8.0"
            android:textColor="#ffff6726"
            android:textSize="35dp" />

    </RelativeLayout>
</RelativeLayout>
